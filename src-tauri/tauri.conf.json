{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "jams-desktop",
  "version": "0.1.4",
  "identifier": "community.jams.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "JAMS",
        "width": 1100,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' asset: https://asset.localhost;",
      "assetProtocol": {
       "enable": true,
       "scope": ["**", "**/*"]
     }
    }
  },
  "bundle": {
    "active": true,
    "category": "Music",
    "targets": "deb",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/A_Lazy_Farmer_Boy_by_Buster_Carter_And_Preston_Young.mp3"]
  },
  "plugins": {
    "clipboard": {
      "enabled": true
    },
    "os": {
      "version": "latest"
    }
  }
}
